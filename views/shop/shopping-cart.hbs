{{# if products}}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <ul class="list-group">
            {{# each products}}
            <li class="list-group-item">
                <span class="badge">{{this.quantity}}</span>
                <strong>{{this.item.title}}</strong>
                <span class="label label-info">${{this.price}}</span>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                        Action<span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="/reduceByOne/{{this.item._id}}">Reduce 1</a></li>
                        <li><a href="/removeItem/{{this.item._id}}">Remove All</a></li>
                    </ul>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <strong>Total: {{totalPrice}}</strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <a href="/checkout" type="button" class="btn btn-info">Buy this seriously.</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>No Items Here ...</h1>
    </div>
</div>
{{/if}}